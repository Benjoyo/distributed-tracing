# This is an example gdbinit file for use with JLink. Tested with 6.40

source Support/gdbtrace.init
target remote :2331
file ofiles/firmware.elf
set mem inaccessible-by-default off
set print pretty
load
monitor reset  0

# Turn on SWO through JLink ... it will do everything needed per chip
monitor SWO EnableTarget 168000000 0 0xFF 0

dwtSamplePC 1
dwtSyncTap 3
dwtPostTap 1
dwtPostInit 1
dwtPostReset 15
dwtCycEna 1

ITMId 1
ITMGTSFreq 3
ITMTSPrescale 3
ITMTXEna 1
ITMSYNCEna 1
ITMEna 1

ITMTER 0 0xFFFFFFFF
ITMTPR 0xFFFFFFFF
